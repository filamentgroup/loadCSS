{
  "name": "fg-loadcss",
  "version": "3.0.0-alpha",
  "description": "A polyfill for `rel=preload` style-loading and a function for loading CSS asynchronously",
  "main": "dist/loadCSS.js",
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/filamentgroup/loadCSS.git"
  },
  "author": "Filament Group <hello@filamentgroup.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/filamentgroup/loadCSS/issues"
  },
  "homepage": "https://github.com/filamentgroup/loadCSS",
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-jquery": "^1.0.1",
    "fs-extra": "^7.0.1",
    "grunt": "~1.0.3",
    "grunt-cli": "~1.3.2",
    "grunt-contrib-qunit": "~3.0.1",
    "husky": "^1.3.1",
    "markdown-toc": "^1.2.0",
    "matchdep": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "opn": "^5.4.0",
    "uglify-es": "^3.3.9"
  },
  "scripts": {
    "start": "node serve",
    "test": "npx grunt",
    "build": "node build.js",
    "commitReadme": "git add README.md",
    "lint": "eslint --fix -- *.js src/**/*.js test/**/*.js",
    "prepublishOnly": "run-s lint build test readmeToc",
    "readmeToc": "npx markdown-toc -i README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build test readmeToc commitReadme"
    }
  },
  "eslintConfig": {
    "extends": "jquery",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2019
    },
    "env": {
      "browser": true,
      "es6": true,
      "jquery": true,
      "node": true,
      "qunit": true
    },
    "globals": {
      "loadCSS": false,
      "onloadCSS": false
    },
    "rules": {
      "indent": [
        "error",
        "tab",
        {
          "outerIIFEBody": 0
        }
      ]
    }
  }
}
